{% extends 'blog/blog.html.twig' %}

{% block title %}
Blog de MM Turismo
{% endblock %}


{% block innerBody %}
    <div class="row">
        <div class="col-sm-8 blog-main">
            {% for post in posts %}
            <div class="blog-post">
                <h4 class="blog-post-title"> {{ post.titulo }} </h4> 
                <p class="blog-post-meta">{{ post.sesion.fecha }} - {{ post.hora }} </p>
                <blockquote>
                    <p>Referencia: <strong>{{ post.servicioGeneral }}</strong> </p>
                </blockquote>
                {% block postSpecific %}
                    <p>Direcci√≥n fisica del archivo: {{ post.fileDir }}</p>
                {% endblock %}
            </div><!-- /.blog-post -->
            {% endfor %}

        </div><!-- /.blog-main -->
        <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
            <div class="sidebar-module sidebar-module-inset">
				{{ knp_menu_render('blog_menu') }}
                <h4>Acerca de</h4>
                <p>Esta seccion puedes leer los posteos de nuestros clientes.</p>
            </div>
            <div class="sidebar-module">
                {% block archivo %}
                <h4>Archivo</h4>
                <ol class="list-unstyled">
                    <li><a href="#">Marzo 2014</a></li>
                    <li><a href="#">Febrero 2014</a></li>
                    <li><a href="#">January 2014</a></li>
                    <li><a href="#">December 2013</a></li>
                    <li><a href="#">November 2013</a></li>
                    <li><a href="#">October 2013</a></li>
                    <li><a href="#">September 2013</a></li>
                    <li><a href="#">August 2013</a></li>
                    <li><a href="#">July 2013</a></li>
                    <li><a href="#">June 2013</a></li>
                    <li><a href="#">May 2013</a></li>
                    <li><a href="#">April 2013</a></li>
                </ol>
                {% endblock %}
            </div>

            <div class="sidebar-module">
                <h4>Otros enlaces</h4>
                <ol class="list-unstyled">
                    <li><a href="#">GitHub</a></li>
                    <li><a href="#">Twitter</a></li>
                    <li><a href="#">Facebook</a></li>
                </ol>
            </div>
        </div><!-- /.blog-sidebar -->
    </div><!-- /.row -->
    <nav>
        <ul class="pager">
            <li><a href="#">Previous</a></li>
            <li><a href="#">Next</a></li>
        </ul>
    </nav>
{% endblock %}
